<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="CrossConnect.MainPageSplit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CrossConnect"
    xmlns:common="using:CrossConnect.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:callisto="using:Callisto.Controls"
    Unloaded="MainPageSplitUnloaded" Loaded="MainPageLoaded"
    mc:Ignorable="d">

    <Page.TopAppBar>
        <AppBar x:Name="TopAppBar1" Padding="10,0,10,0" AutomationProperties.Name="Top App Bar">
            <ScrollViewer VerticalScrollMode="Disabled" Name="scrollViewerTopAppBar1" HorizontalScrollMode="Auto"
                          Style="{StaticResource HorizontalScrollViewerStyle}">
                <Grid Name="GridTopAppBar1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*" />
                        <ColumnDefinition Width="50*" />
                        <ColumnDefinition Width="50*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel x:Name="leftpanel" Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Left">
                        <Button x:Name="AddNewWindow" Click="ButAddWindowClick"
                                Style="{StaticResource AddAppBarButtonStyle}" Tag="Edit" />
                        <Button x:Name="Settings" Click="MenuSettingsClick"
                                Style="{StaticResource SettingsAppBarButtonStyle}" Tag="Next" />
                        <Button x:Name="DownloadBibles" Click="MenuDownloadBibleClick"
                                Style="{StaticResource DownloadAppBarButtonStyle}" Tag="Delete" />
                        <Button x:Name="Themes" Click="MenuThemesClick" Style="{StaticResource FontAppBarButtonStyle}"
                                Tag="Refresh" />
                    </StackPanel>
                    <StackPanel x:Name="CenterPanel1" Orientation="Horizontal" Grid.Column="1"
                                HorizontalAlignment="Center">
                        <Button x:Name="ColumnsWider" Click="ColumnsWider_OnClick"
                                Style="{StaticResource ZoomInAppBarButtonStyle}" Tag="Columns Wider" />
                        <Button x:Name="ColumnsSmaller" Click="ColumnsSmaller_OnClick"
                                Style="{StaticResource ZoomOutAppBarButtonStyle}" Tag="Columns Smaller" />
                    </StackPanel>
                    <StackPanel x:Name="RightPanel1" Orientation="Horizontal" Grid.Column="2"
                                HorizontalAlignment="Right">
                        <Button x:Name="Help" Click="ButHelpClick" Style="{StaticResource HelpAppBarButtonStyle}"
                                Tag="Help" />
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </AppBar>
    </Page.TopAppBar>

    <Page.BottomAppBar>
        <AppBar x:Name="BottomAppBar1" Padding="10,0,10,0" AutomationProperties.Name="Bottom App Bar"
                Opened="BottomAppBar1_Opened_1" Closed="BottomAppBar1_Closed_1">
            <ScrollViewer Name="scrollViewerBottomAppBar1" HorizontalScrollMode="Auto"
                          Style="{StaticResource HorizontalScrollViewerStyle}" VerticalScrollMode="Disabled">
                <Grid Name="GridBottomAppBar1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*" />
                        <ColumnDefinition Width="50*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel x:Name="leftpanel22" Orientation="Horizontal" Grid.Column="0"
                                HorizontalAlignment="Left">
                        <Button x:Name="ClearHistory" Click="MenuClearHistoryClick"
                                Style="{StaticResource DisableUpdatesAppBarButtonStyle}" Tag="Next" />
                        <Button x:Name="SelectLanguage" Click="MenuLanguageClick"
                                Style="{StaticResource GlobeAppBarButtonStyle}" Tag="Next" />
                        <Button x:Name="DeleteBible" Click="MenuDeleteBibleClick"
                                Style="{StaticResource DeleteAppBarButtonStyle}" Tag="Next" />
                        <Button x:Name="DeleteBookmarks" Click="MenuDeleteBookmarkClick"
                                Style="{StaticResource UnfavoriteAppBarButtonStyle}" Tag="Next" />
                        <Button x:Name="OneDriveBackupRestore" Click="MenuOneDriveBackupRestoreClick"
                                Style="{StaticResource UploadSkyDriveAppBarButtonStyle}" Tag="Next" />
                    </StackPanel>
                    <StackPanel x:Name="RightPanel22" Orientation="Horizontal" Grid.Column="1"
                                HorizontalAlignment="Right">
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </AppBar>
    </Page.BottomAppBar>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid x:Name="LayoutMainRoot"
          Style="{StaticResource LayoutRootStyle}">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Details for selected item -->
        
        <ScrollViewer
            Margin=" 0,0,0,5"
            x:Name="itemDetail"
            AutomationProperties.AutomationId="ItemDetailScrollViewer"
            Grid.Row="0"
            Style="{StaticResource HorizontalScrollViewerStyle}">
            <StackPanel Orientation="Horizontal">
                <Grid Name="LeftSpacer" Width="40"></Grid>
                <Grid x:Name="itemDetailGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition x:Name="LastRow" Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image Grid.Row="1" Margin="0,0,20,0" Width="30" Height="22" Source="{Binding Image}"
                       Stretch="UniformToFill" AutomationProperties.Name="{Binding Title}" />
                <StackPanel x:Name="itemDetailTitlePanel" Grid.Row="1" Grid.Column="1">
                    <TextBlock x:Name="itemTitle" Margin="0,-10,0,-10" Text="Cross-Connect"
                               Style="{StaticResource SubheaderTextStyle}" />
                </StackPanel>
                    <Grid Margin=" 0,0,0,12" x:Name="WindowGrid" Grid.Row="3" Grid.Column="1"></Grid>
            </Grid>
                <Grid Name="RightSpacer" Width="40"></Grid>
            </StackPanel>
        </ScrollViewer>
        <Popup x:Name="SettingsPopup" IsLightDismissEnabled="True" Closed="SettingsPopup_OnClosed"
               Opened="SettingsPopup_OnOpened">
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PaneThemeTransition />
                </TransitionCollection>
            </Popup.ChildTransitions>
            <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" BorderThickness="2"
                    Background="{StaticResource ApplicationPageBackgroundThemeBrush}" x:Name="RootPopupBorder">
                <StackPanel Name="MainPaneSettingsPopup" Orientation="Vertical">
                    <ScrollViewer Name="scrollViewerSettings">

                        <!--ContentPanel - place additional content here-->
                        <StackPanel Grid.Row="1" x:Name="ContentPanel">
                            <TextBlock Name="SettingsTitle" Text="Settings" Margin="20 20 20 20" FontSize="18" />
                            <ToggleSwitch Header="Highlight text markings" IsOn="false"
                                          Name="highlightMarkings" />
                            <ToggleSwitch Header="Show the words of Jesus in red" IsOn="false"
                                          Name="wordsOfChristRed" />
                            <ToggleSwitch Header="Use small verse numbers" IsOn="true"
                                          Name="smallVerseNumbers" />
                            <ToggleSwitch Header="Show note positions" IsOn="false"
                                          Name="showNotePositions" />
                            <ToggleSwitch Header="Show the book name on each verse" IsOn="false"
                                          Name="showBookName" />
                            <ToggleSwitch Header="Show the chapter number on each verse" IsOn="true"
                                          Name="showChapterNumber" />
                            <ToggleSwitch Header="Show the verse number on each verse" IsOn="true"
                                          Name="showVerseNumber" />
                            <ToggleSwitch Header="Show Strong's numbers" IsOn="false"
                                          Name="showStrongsNumbers" />
                            <ToggleSwitch Header="Show word morphology" IsOn="false"
                                          Name="showMorphology" />
                            <ToggleSwitch Header="Show the headings" IsOn="true"
                                          Name="showHeadings" />
                            <ToggleSwitch Header="Start each verse on a new line" IsOn="false"
                                          Name="eachVerseNewLine" />
                            <ToggleSwitch Header="Show added notes by chapter" IsOn="false"
                                          Name="showAddedNotesByChapter" />
                            <ToggleSwitch Header="Use internet dictionaries" IsOn="false"
                                          Name="useInternetGreekHebrewDict" />
                            <ToggleSwitch Header="Use highlighting" IsOn="true"
                                          Name="useHighlighting" />
                            <ToggleSwitch Header="Use remote storage of settings" IsOn="true"
                                          Name="useRemoteStorage" />
                            <ToggleSwitch Header="SyncVerses" Name="SyncVerses" />
                            <ToggleSwitch Header="AddLineBetweenNotes" Name="AddLineBetweenNotes" />
                            
                            <TextBlock Name="captionHebrewDictionaryLink" Text="Hebrew dictionary internet link" />
                            <TextBox Name="hebrewDictionaryLink" Text="" Margin="10 10 10 10" />
                            <TextBlock Name="captionGreekDictionaryLink" Text="Greek dictionary internet link" />
                            <TextBox Name="greekDictionaryLink" Text="" Margin="10 10 10 10" />
                            <TextBlock Name="captionCustomBibleDownloadLink" Text="Custom bible download address" />
                            <TextBox Name="customBibleDownloadLink" Text="" Margin="10 10 10 10" />
                            <TextBlock Name="captionSoundLink" Text="Talking bible internet link" />
                            <TextBox Name="soundLink" Text="" Margin="10 10 10 10" />
                            <TextBlock Name="captionHightlight1" Text="Name Hightlight1" />
                            <TextBox Name="highlightName1" Text="" Margin="10 10 10 10" />
                            <TextBlock Name="captionHightlight2" Text="Name Hightlight2" />
                            <TextBox Name="highlightName2" Text="" Margin="10 10 10 10" />
                            <TextBlock Name="captionHightlight3" Text="Name Hightlight3" />
                            <TextBox Name="highlightName3" Text="" Margin="10 10 10 10" />
                            <TextBlock Name="captionHightlight4" Text="Name Hightlight4" />
                            <TextBox Name="highlightName4" Text="" Margin="10 10 10 10" />
                            <TextBlock Name="captionHightlight5" Text="Name Hightlight5" />
                            <TextBox Name="highlightName5" Text="" Margin="10 10 10 10" />
                            <TextBlock Name="captionHightlight6" Text="Name Hightlight6" />
                            <TextBox Name="highlightName6" Text="" Margin="10 10 10 10" />
                            <Button Content="Default settings" Name="butSettingsDefault"
                                    Click="ButSettingsDefault_OnClick" />
                            <Button Content="Export to the clipboard Bookmarks, Highlights And Notes" Name="butExportBookmarksHighlightsAndNotes"
                                    Click="butExportBookmarksHighlightsAndNotes_Click" />
                            <Button Content="Import from the clipboard Bookmarks, Highlights And Notes" Name="butImportBookmarksHighlightsAndNotes"
                                    Click="butImportBookmarksHighlightsAndNotes_Click" />
                        </StackPanel>

                    </ScrollViewer>

                </StackPanel>
            </Border>
        </Popup>

        <Popup x:Name="DeleteBiblePopup" IsLightDismissEnabled="True" Closed="DeleteBiblePopup_OnClosed"
               Opened="DeleteBiblePopup_OnOpened">
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PaneThemeTransition />
                </TransitionCollection>
            </Popup.ChildTransitions>
            <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" BorderThickness="2"
                    Background="{StaticResource ApplicationPageBackgroundThemeBrush}" x:Name="copyborder">
                <ScrollViewer Name="scrollViewerBibleDelete" Grid.Row="1">
                    <Grid Name="MainPaneDeleteBiblePopup">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock x:Name="SelectBibleDeleteTitle" Margin="20 20 20 20" FontSize="18" />
                        </StackPanel>
                        <ListBox SelectionChanged="DeleteBibleSelectionChanged" Grid.Row="1"
                                 x:Name="SelectListBibleDelete" FontSize="14">

                        </ListBox>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Popup>

        <Popup x:Name="DeleteBookmarkPopup" IsLightDismissEnabled="True" Closed="DeleteBookmarkPopup_OnClosed"
               Opened="DeleteBookmarkPopup_OnOpened">
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PaneThemeTransition />
                </TransitionCollection>
            </Popup.ChildTransitions>
            <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" BorderThickness="2"
                    Background="{StaticResource ApplicationPageBackgroundThemeBrush}" x:Name="dbborder">
                <ScrollViewer Name="scrollViewerBookmarks" Grid.Row="1">
                    <Grid Name="MainPaneDeleteBookmarkPopup">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock x:Name="SelectBookmarkTitle" Margin="20 20 20 20" FontSize="18" />
                        </StackPanel>
                        <ListBox SelectionChanged="DeleteBookmarkSelectionChanged" Grid.Row="1"
                                 x:Name="SelectListBookmarks" FontSize="14">

                        </ListBox>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Popup>

