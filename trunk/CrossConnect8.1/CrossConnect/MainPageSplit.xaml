        <Popup x:Name="AddWindowPopup" IsLightDismissEnabled="True" Closed="AddWindowPopup_OnClosed"
               Opened="AddWindowPopup_OnOpened">
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PaneThemeTransition />
                </TransitionCollection>
            </Popup.ChildTransitions>
            <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" BorderThickness="2"
                    Background="{StaticResource ApplicationPageBackgroundThemeBrush}" x:Name="dxxxborder">
                <ScrollViewer Name="scrollViewerAddWindow" Grid.Row="1">
                    <Grid Name="MainPaneAddWindowPopup">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock x:Name="AddWindowTitle" Margin="20 20 20 20" FontSize="18" />
                        </StackPanel>
                        <StackPanel Grid.Row="1" x:Name="ContentAddWindowPanel">
                            <TextBlock Name="selectColumn" Text="Column" TextWrapping="Wrap"
                                       Style="{StaticResource BaselineTextStyle}" />
                            <StackPanel Orientation="Horizontal">
                                <RadioButton GroupName="selectColumn" Content="1" FontSize="18" Name="Col1" />
                                <RadioButton GroupName="selectColumn" Content="2" FontSize="18" Name="Col2" />
                                <RadioButton GroupName="selectColumn" Content="3" FontSize="18" Name="Col3" />
                                <RadioButton GroupName="selectColumn" Content="4" FontSize="18" Name="Col4" />
                                <RadioButton GroupName="selectColumn" Content="5" FontSize="18" Name="Col5" />
                                <RadioButton GroupName="selectColumn" Content="6" FontSize="18" Name="Col6" />
                                <RadioButton GroupName="selectColumn" Content="7" FontSize="18" Name="Col7" />
                                <RadioButton GroupName="selectColumn" Content="8" FontSize="18" Name="Col8" />
                                <RadioButton GroupName="selectColumn" Content="9" FontSize="18" Name="Col9" />
                            </StackPanel>
                            <TextBlock Name="selectDocumentTypeHeader" Text="Select the window type"
                                       TextWrapping="Wrap" Style="{StaticResource BaselineTextStyle}" />
                            <ComboBox Margin="10 10 0 10" Name="selectDocumentType"
                                      SelectionChanged="SelectDocumentTypeSelectionChanged" />
                            <TextBlock Name="selectPlanTypeHeader" Text="Select the daily plan" TextWrapping="Wrap"
                                       Style="{StaticResource BaselineTextStyle}" />
                            <ComboBox Margin="10 10 0 10" Name="selectPlanType" />
                            <TextBlock Name="planStartDateCaption" Text="Select the daily plan start date"
                                       Style="{StaticResource BaselineTextStyle}" />
                            <StackPanel x:Name="DateSelectPanel" Orientation="Horizontal" HorizontalAlignment="Left">
                                <ComboBox Name="planStartDateYear" Margin="10 10 10 10" />
                                <ComboBox Name="planStartDateMonth" Margin="10 10 10 10" />
                                <ComboBox Name="planStartDateDay" Margin="10 10 10 10" />
                                <Button Name="SetDateToday" Click="ButSetDateTodayClick">Today</Button>
                            </StackPanel>
                            <TextBlock Name="planActualDateCaption" Text="Select the daily plan current date"
                                       Style="{StaticResource BaselineTextStyle}" />
                            <StackPanel x:Name="DateActualSelectPanel" Orientation="Horizontal" HorizontalAlignment="Left">
                                <ComboBox Name="planActualDateYear" Margin="10 10 10 10" />
                                <ComboBox Name="planActualDateMonth" Margin="10 10 10 10" />
                                <ComboBox Name="planActualDateDay" Margin="10 10 10 10" />
                            </StackPanel>
                            <TextBlock Name="selectDocumentHeader" Text="Select the bible" TextWrapping="Wrap"
                                       Style="{StaticResource BaselineTextStyle}" />
                            <ComboBox Margin="10 10 0 10" Name="selectDocument">
                            </ComboBox>
                            <Grid>
                                <Rectangle Name="UserInterfaceBlocker" MinHeight="50" />
                                <WebView Margin="0 0 0 0" Visibility="Collapsed" Name="webBrowser1" MinHeight="50" />
                            </Grid>
                            <Slider ValueChanged="SliderTextSizeValueChanged" Name="sliderTextSize" />
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Popup>
        <Popup x:Name="DownloadBiblePopup" IsLightDismissEnabled="True" Closed="DownloadBiblePopup_OnClosed"
               Opened="DownloadBiblePopup_OnOpened">
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PaneThemeTransition />
                </TransitionCollection>
            </Popup.ChildTransitions>
            <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" BorderThickness="2"
                    Background="{StaticResource ApplicationPageBackgroundThemeBrush}" x:Name="dddvvborder">
                <ScrollViewer Name="scrollViewerBibleDownload">
                    <Grid Name="MainPaneDownloadBiblePopup">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock x:Name="SelectBibleDownloadTitle" Margin="20 20 20 20" FontSize="18" />
                        </StackPanel>
                        <Grid x:Name="LayoutRoot" Grid.Row="1" Background="Transparent">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <ProgressBar Grid.Row="0" Name="WaitingForDownload" Margin="0,50,0,0"
                                         IsIndeterminate="True" />
                            <TextBlock Grid.Row="1" Name="ServerMessage" Text="server message" TextWrapping="Wrap"
                                       Style="{StaticResource BaselineTextStyle}" />
                            <!--ContentPanel - place additional content here-->
                            <StackPanel Grid.Row="2" x:Name="DownloadContentPanel">
                                <TextBlock Name="selectServerHeader" Text="XXXXXXXXXXXXXXXXx" TextWrapping="Wrap"
                                           Style="{StaticResource BaselineTextStyle}" />
                                <ComboBox Margin="10 10 0 10" Name="selectServer"
                                          SelectionChanged="SelectServerSelectionChanged" />
                                <Button Content="Get bible list" Name="butDownload" Click="ButDownloadClick" />
                                <ProgressBar Name="progressBarGetBookList" Height="30" />
                                <TextBlock Name="selectTypeHeader" Text="XXXXXXXXXXXXXXXXx" TextWrapping="Wrap"
                                           Style="{StaticResource BaselineTextStyle}" />
                                <ComboBox Margin="10 10 0 10" Name="selectType"
                                          SelectionChanged="SelectTypeSelectionChanged" />
                                <TextBlock Name="selectLangaugeHeader" Text="XXXXXXXXXXXXXXXXx" TextWrapping="Wrap"
                                           Style="{StaticResource BaselineTextStyle}" />
                                <ComboBox Margin="10 10 0 10" Name="selectLangauge"
                                          SelectionChanged="SelectLangaugeSelectionChanged" />
                                <TextBlock Name="selectBookHeader" Text="XXXXXXXXXXXXXXXXx" TextWrapping="Wrap"
                                           Style="{StaticResource BaselineTextStyle}" />
                                <ComboBox Margin="10 10 0 10" Name="selectBook" />
                                <Button Content="Download bible" Name="butDownloadBook" Click="ButDownloadBookClick" />
                                <ProgressBar Grid.Column="1" Grid.Row="5" Name="progressBarGetBook" Height="30" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Popup>
        <Popup x:Name="ThemePopup" IsLightDismissEnabled="True" Closed="ThemePopup_OnClosed"
               Opened="ThemePopup_OnOpened">
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PaneThemeTransition />
                </TransitionCollection>
            </Popup.ChildTransitions>
            <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" BorderThickness="2"
                    Background="{StaticResource ApplicationPageBackgroundThemeBrush}" x:Name="db22border">
                <Grid Name="MainPaneThemePopup">
                    <ScrollViewer Name="scrollViewerThemes">
                        <StackPanel x:Name="MainContent">
                            <TextBlock x:Name="ThemeTitle" Margin="20 20 20 20" FontSize="18" />
                            <TextBlock Margin="10 10 10 10" x:Name="SelectThemeText" Text="Theme to edit" FontSize="18" />
                            <ComboBox Margin="10 10 10 10" Name="ThemesComboBox"
                                      SelectionChanged="ThemesComboBox_OnSelectionChanged" />
                            <TextBlock Margin="10 10 10 10" x:Name="ThemeNameText" Text="Save theme as" FontSize="18" />
                            <TextBox Margin="10 10 10 10" Name="ThemeName" Text="" />
                            <Button HorizontalAlignment="Right" Name="ThemeSave" Content="Save as new theme"
                                    Click="ThemeSave_OnClick" />
                            <TextBlock Margin="10 10 10 10" x:Name="ThemeFont" Text="Font" FontSize="18" />
                            <ComboBox Margin="10 10 10 10" Name="FontComboBox" />
                            <local:ColorPicker x:Name="MainFontColor"></local:ColorPicker>
                            <local:ColorPicker x:Name="MainBackColor"></local:ColorPicker>
