                            <local:ColorPicker x:Name="WordsOfChristRed"></local:ColorPicker>
                            <local:ColorPicker x:Name="Highlight1"></local:ColorPicker>
                            <local:ColorPicker x:Name="Highlight2"></local:ColorPicker>
                            <local:ColorPicker x:Name="Highlight3"></local:ColorPicker>
                            <local:ColorPicker x:Name="Highlight4"></local:ColorPicker>
                            <local:ColorPicker x:Name="Highlight5"></local:ColorPicker>
