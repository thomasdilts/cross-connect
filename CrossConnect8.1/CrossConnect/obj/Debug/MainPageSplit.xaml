                            <TextBlock Name="captionHightlight6" Text="Name Hightlight6" />
                            <TextBox Name="highlightName6" Text="" Margin="10 10 10 10" />
                            <Button x:ConnectionId='45' Content="Default settings" Name="butSettingsDefault"
                                                                       />
                            <Button x:ConnectionId='46' Content="Export to the clipboard Bookmarks, Highlights And Notes" Name="butExportBookmarksHighlightsAndNotes"
                                                                                       />
                            <Button x:ConnectionId='47' Content="Import from the clipboard Bookmarks, Highlights And Notes" Name="butImportBookmarksHighlightsAndNotes"
                                                                                       />
                        </StackPanel>

                    </ScrollViewer>

                </StackPanel>
            </Border>
        </Popup>

