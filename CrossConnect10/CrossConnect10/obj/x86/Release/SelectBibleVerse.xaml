<UserControl x:ConnectionId='1' x:Class="CrossConnect.SelectBibleVerse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CrossConnect"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="200"
    d:DesignWidth="400"                            >

    <Grid x:ConnectionId='2' x:Name="LayoutRoot" Height="45" Margin="0 4 0 4"  >
        <StackPanel x:ConnectionId='3' x:Name="MainContent"  Orientation="Horizontal">
            <ComboBox x:ConnectionId='4'  Name="SelectBibleList"                                                                                     >
                <TextBlock x:ConnectionId='15' Name="test00">Book</TextBlock>
            </ComboBox>
            <ComboBox x:ConnectionId='5' Name="SelectChapterList"                                                       >
                    <TextBlock x:ConnectionId='14' Name="test000">Chapter</TextBlock>
            </ComboBox>
            <ComboBox x:ConnectionId='6' Name="SelectVerseList"                                                     >
                    <TextBlock x:ConnectionId='13' Name="test000fffxx">Verse</TextBlock>
            </ComboBox>
            <Image x:ConnectionId='7' Name="arrowright" Source="Assets/AppBar/appbar.arrowto.rest.png" Width="40" />
            <ComboBox x:ConnectionId='8' Name="SelectToVerseList" >
                <TextBlock x:ConnectionId='12' Name="test000fff">To Verse</TextBlock>
            </ComboBox>
            <Button x:ConnectionId='9' Width="40" 
                                                  HorizontalAlignment="Center"
                            Style="{StaticResource UploadAppBarButtonStyle2}" x:Name="butMoveUp"
                            />
            <Button x:ConnectionId='10' Width="40" 
                                                    HorizontalAlignment="Center"
                            Style="{StaticResource DownloadAppBarButtonStyle2}" x:Name="butMoveDown"
                           />
            <Button x:ConnectionId='11' Width="40" 
                                                 HorizontalAlignment="Center"
                            Style="{StaticResource DeleteAppBarButtonStyle2}" x:Name="butClose"
                            />
        </StackPanel>
    </Grid>
</UserControl>

