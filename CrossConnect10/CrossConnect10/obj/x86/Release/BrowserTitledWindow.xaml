<UserControl
    x:Class="CrossConnect.BrowserTitledWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CrossConnect"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="600">

    <Border x:ConnectionId='1' BorderBrush="Silver" BorderThickness="3"
            Name="border1">

        <Grid x:ConnectionId='2' Name="grid1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel x:ConnectionId='3' Name="stackPanelButtons" Grid.Column="0" Grid.Row="0" Orientation="Vertical"
                        HorizontalAlignment="Left">
                <Grid x:ConnectionId='96' Name="gridPanelButtons1" HorizontalAlignment="Center" Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button x:ConnectionId='101' x:Name="ButPrevious" Grid.Column="0"                          HorizontalAlignment="Center"
                            Style="{StaticResource PreviousAppBarButtonStyle2}" Tag="Edit" />
                    <Button x:ConnectionId='102' x:Name="ButNext" Grid.Column="1"                      HorizontalAlignment="Center"
                            Style="{StaticResource NextAppBarButtonStyle2}" Tag="Edit" />
                    <Button x:ConnectionId='103' x:Name="ButChapters" Grid.Column="2"                              HorizontalAlignment="Center"
                            Style="{StaticResource MoveToFolderAppBarButtonStyle2}" Tag="Edit" />
                    <Button x:ConnectionId='104' x:Name="ButSearch" Grid.Column="3"                           HorizontalAlignment="Center"
                            Style="{StaticResource SearchAppBarButtonStyle2}" Tag="Edit" />
                    <Button x:ConnectionId='105' x:Name="ButWindowSettings" Grid.Column="4"                                   HorizontalAlignment="Center"
                            Style="{StaticResource SettingsAppBarButtonStyle2}" Tag="Edit" />
                    <Button x:ConnectionId='106' x:Name="ButMenu" Grid.Column="5"                      HorizontalAlignment="Center"
                            Style="{StaticResource ListAppBarButtonStyle2}" Tag="Edit" />
                    <Button x:ConnectionId='107' x:Name="ButLink" Grid.Column="6"                      HorizontalAlignment="Center"
                            Style="{StaticResource LinkAppBarButtonStyle2}" Tag="Edit" />
                    <Button x:ConnectionId='108' x:Name="ButUnLink" Grid.Column="6"                      HorizontalAlignment="Center"
                            Style="{StaticResource AppBarButtonStyle2}" Tag="Edit">
                        <Button.Content>
                            <Image Source="Assets/AppBar/appbar.linkto.rest.pressed.png" />
                        </Button.Content>
                    </Button>
                    <Button x:ConnectionId='109' x:Name="ButClose" Grid.Column="7"                       HorizontalAlignment="Center"
                            Style="{StaticResource DeleteAppBarButtonStyle2}" Tag="Edit" />
                </Grid>
                <Grid x:ConnectionId='97' Name="searchPanel" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="0" />
                        <ColumnDefinition Width="0" />
                    </Grid.ColumnDefinitions>
                    <TextBlock x:ConnectionId='98' Grid.Column="0" Name="title" Text="......." FontSize="18" />
                    <TextBox x:ConnectionId='99' Visibility="Collapsed" Grid.Column="2" Width="250"   Text=""  Name="SearchInput" />
                    <Button x:ConnectionId='100' Visibility="Collapsed" Grid.Column="3" x:Name="butSearchDictionary"                                     HorizontalAlignment="Center"
                            Style="{StaticResource SearchAppBarButtonStyle2}" Tag="Edit" />
                </Grid>
            </StackPanel>
            <Rectangle x:ConnectionId='4' Name="UserInterfaceBlocker" Grid.Row="1" />
            <Popup x:ConnectionId='5' x:Name="SearchPopup"                                                             Grid.Row="1"
                   HorizontalOffset="150" VerticalOffset="-60" IsLightDismissEnabled="True">
                <Popup.ChildTransitions>
                    <TransitionCollection>
                        <PopupThemeTransition />
                    </TransitionCollection>
                </Popup.ChildTransitions>
                <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" BorderThickness="2"
                        Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ListBox x:ConnectionId='92' FontSize="30"  Name="SubMenuSearchPopup" SelectedItem="-1"
                                                                                         >
                            <ListBoxItem x:ConnectionId='93' Name="ListBook">Book</ListBoxItem>
                            <ListBoxItem x:ConnectionId='94' Name="ListChapter">Chapter</ListBoxItem>
                            <ListBoxItem x:ConnectionId='95' Name="ListVerse">Verse</ListBoxItem>
                        </ListBox>
                    </StackPanel>
                </Border>
            </Popup>
            <Popup x:ConnectionId='6' x:Name="BookPopup"                               HorizontalOffset="-100" VerticalOffset="-100"
                   IsLightDismissEnabled="True">
                <Popup.ChildTransitions>
                    <TransitionCollection>
                        <PopupThemeTransition />
                    </TransitionCollection>
                </Popup.ChildTransitions>
                <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" BorderThickness="2"
                        Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
                        <TextBlock x:ConnectionId='89' Name="ListTitle" Text="Select book" Margin="6 6 6 6" FontSize="18" />
                        <ScrollViewer x:ConnectionId='90' VerticalScrollBarVisibility="Auto" Name="SelectBookScrollViewer">
                            <Grid x:ConnectionId='91' x:Name="ScrollContentGrid" Background="Transparent"></Grid>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Popup>
            <Popup x:ConnectionId='7' x:Name="RealSearchPopup"                                                                 HorizontalOffset="10" VerticalOffset="-150"
                   IsLightDismissEnabled="True">
                <Popup.ChildTransitions>
                    <TransitionCollection>
                        <PopupThemeTransition />
                    </TransitionCollection>
                </Popup.ChildTransitions>
                <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" BorderThickness="2"
                        Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
                    <StackPanel>
                        <Popup x:ConnectionId='65' x:Name="HelpPopup" HorizontalOffset="-100" VerticalOffset="-100"
                   IsLightDismissEnabled="True">
                            <Popup.ChildTransitions>
                                <TransitionCollection>
                                    <PopupThemeTransition />
                                </TransitionCollection>
                            </Popup.ChildTransitions>
                            <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" BorderThickness="2"
                        Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
                                <WebView x:ConnectionId='88' x:Name="webBrowserHelp" MinHeight="400" MinWidth="300"/>
                            </Border>
                        </Popup>
                        <ScrollViewer x:ConnectionId='66' Name="RealSearchScrollViewer">
                            <Grid x:ConnectionId='67' x:Name="LayoutRoot" Background="Transparent">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--TitlePanel contains the name of the application and page title-->
                                <StackPanel x:ConnectionId='68' Grid.Row="0" x:Name="TitlePanel" Height="33" VerticalAlignment="Top">
                                    <TextBlock x:ConnectionId='87' x:Name="PageTitle" Text="Search" FontSize="18" />
                                </StackPanel>
                                <!--ContentPanel - place additional content here-->
                                <StackPanel x:ConnectionId='69' Grid.Row="1" x:Name="ContentPanel">
                                    <Button x:ConnectionId='70' Content="Search" Name="butSearch"                        />
                                    <TextBox x:ConnectionId='71' Name="SearchText" Text="" Margin="15 5 15 5" FontSize="18" />
                                    <StackPanel Orientation="Horizontal"  Margin="0 20 0 0">
                                    <RadioButton x:ConnectionId='85' IsChecked="True" GroupName="FastOrSlow" FontSize="18"
                                                 Content="Fast search"
                                                 Name="FastSearch"                           />
                                        <Button x:ConnectionId='86' Content="Help" Name="butFastHelp"                             />
                                        </StackPanel>
                                    <RadioButton x:ConnectionId='72' GroupName="FastOrSlow" Content="Slow search" FontSize="18"
                                                 Name="SlowSearch"                            />

                                    <TextBlock x:ConnectionId='73' x:Name="SearchWhereText" Margin="0 20 0 0" Text="Search where" FontSize="18" />
                                    <RadioButton x:ConnectionId='74' IsChecked="True" GroupName="SearchWhere" FontSize="18"
                                                 Content="Whole bible"
                                                 Name="WholeBible" />
                                    <RadioButton x:ConnectionId='75' GroupName="SearchWhere" Content="Old Testement" FontSize="18"
                                                 Name="OldTestement" />
                                    <RadioButton x:ConnectionId='76' GroupName="SearchWhere" Content="New Testement" FontSize="18"
                                                 Name="NewTEstement" />
                                    <RadioButton x:ConnectionId='77' GroupName="SearchWhere" Content="" FontSize="18" Name="Chapter" />
                                    <TextBlock x:ConnectionId='78' x:Name="SearchByText" Margin="0 20 0 0" Text="Search conditions"
                                               FontSize="18" />
                                    <RadioButton x:ConnectionId='79' IsChecked="True" GroupName="SearchBy" FontSize="18"
                                                 Content="One or more words"
                                                 Name="OneOrMoreWords" />
                                    <RadioButton x:ConnectionId='80' GroupName="SearchBy" FontSize="18" Content="All words (max 3 words)"
                                                 Name="AllWords" />
                                    <RadioButton x:ConnectionId='81' GroupName="SearchBy" FontSize="18"
                                                 Content="Exact match (Regular expressions)"
                                                 Name="ExactMatch" />
                                    <ToggleSwitch x:ConnectionId='82' Header="Ignore case" Margin="0 20 0 0" FontSize="18" Name="IgnoreCase" />
                                    <ProgressBar x:ConnectionId='83' Minimum="0" Maximum="100" Name="ProgressBar1" Height="60" />
                                    <Button x:ConnectionId='84' Content="Help on regular expressions" Name="ButHelp" FontSize="18"
                                                                 />
                                </StackPanel>
                        
                            </Grid>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Popup>
            <Popup x:ConnectionId='8' x:Name="CopyPopup" IsLightDismissEnabled="True"                            
                                              >
                <Popup.ChildTransitions>
                    <TransitionCollection>
                        <PaneThemeTransition />
                    </TransitionCollection>
                </Popup.ChildTransitions>
                <Border x:ConnectionId='60' BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" BorderThickness="2"
                        Background="{StaticResource ApplicationPageBackgroundThemeBrush}" x:Name="copyborder">
                    <Grid x:ConnectionId='61' Name="MainPaneCopyPopup">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <Button x:ConnectionId='63'                           Content="Select all" x:Name="SelectAll" />
                            <Button x:ConnectionId='64'                               Content="Copy selection" x:Name="CopySelection" />
                        </StackPanel>
                        <TextBox x:ConnectionId='62' Grid.Row="1" Name="SelectText" Style="{StaticResource ReadOnlyTextBox}">
                        </TextBox>

                    </Grid>
                </Border>
            </Popup>
            <Popup x:ConnectionId='9' x:Name="HighlightPopup" IsLightDismissEnabled="True"                                 
                                                   >
                <Popup.ChildTransitions>
                    <TransitionCollection>
                        <PaneThemeTransition />
                    </TransitionCollection>
                </Popup.ChildTransitions>
                <Border x:ConnectionId='51' BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" BorderThickness="2"
                        Background="{StaticResource ApplicationPageBackgroundThemeBrush}" x:Name="highlightborder">
                    <Grid x:ConnectionId='52' Name="MainPaneHighlightPopup">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Vertical"  Margin="0 20 0 0">
                            <RadioButton x:ConnectionId='53' IsChecked="False" Padding="20 20 20 20" GroupName="Highlighting" FontSize="18"
                                                 Content="Highlight"
                                                 Name="SelectHighlight1"                                />
                            <RadioButton x:ConnectionId='54' IsChecked="False" Padding="20 20 20 20" GroupName="Highlighting" FontSize="18"
                                                 Content="Highlight"
                                                 Name="SelectHighlight2"                                />
                            <RadioButton x:ConnectionId='55' IsChecked="False" Padding="20 20 20 20" GroupName="Highlighting" FontSize="18"
                                                 Content="Highlight"
                                                 Name="SelectHighlight3"                                />
                            <RadioButton x:ConnectionId='56' IsChecked="False" Padding="20 20 20 20" GroupName="Highlighting" FontSize="18"
                                                 Content="Highlight"
                                                 Name="SelectHighlight4"                                />
                            <RadioButton x:ConnectionId='57' IsChecked="False" Padding="20 20 20 20" GroupName="Highlighting" FontSize="18"
                                                 Content="Highlight"
                                                 Name="SelectHighlight5"                                />
                            <RadioButton x:ConnectionId='58' IsChecked="False" Padding="20 20 20 20" GroupName="Highlighting" FontSize="18"
                                                 Content="Highlight"
                                                 Name="SelectHighlight6"                                />
                            <RadioButton x:ConnectionId='59' IsChecked="False" Padding="20 20 20 20" GroupName="Highlighting" FontSize="18"
                                                 Content="None"
                                                 Name="SelectHighlightNone"                                />
                        </StackPanel>

                    </Grid>
                </Border>
            </Popup>
            <Popup x:ConnectionId='10' x:Name="EnterKeyPopup" IsLightDismissEnabled="True"                                
                                                  >
                <Popup.ChildTransitions>
                    <TransitionCollection>
                        <PaneThemeTransition />
                    </TransitionCollection>
                </Popup.ChildTransitions>
                <Border x:ConnectionId='46' BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" BorderThickness="2"
                        Background="{StaticResource ApplicationPageBackgroundThemeBrush}" x:Name="enterkeyborder">
                    <Grid x:ConnectionId='47' Name="MainPaneEnterKeyPopup">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="100" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock x:ConnectionId='48' x:Name="ErrorEnterKeyText" Grid.Row="0" Text="Enter key" FontSize="18" />
                        <TextBox x:ConnectionId='49' Grid.Row="1" Name="EnteredKeyText" >
                        </TextBox>
                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <Button x:ConnectionId='50'                         Content="Save" x:Name="SaveKey"  />
                        </StackPanel>

                    </Grid>
                </Border>
            </Popup>
            <Popup x:ConnectionId='11' x:Name="AddNotePopup" IsLightDismissEnabled="True"                               
                                                 >
                <Popup.ChildTransitions>
                    <TransitionCollection>
                        <PaneThemeTransition />
                    </TransitionCollection>
                </Popup.ChildTransitions>
                <Border x:ConnectionId='41' BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" BorderThickness="2"
                        Background="{StaticResource ApplicationPageBackgroundThemeBrush}" x:Name="addborder">
                    <Grid x:ConnectionId='42' Name="MainPaneAddNotePopup">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock x:ConnectionId='43' Grid.Row="0" x:Name="AddNoteTitle" Margin="20 20 20 20" FontSize="18" />
                        <TextBlock x:ConnectionId='44' Grid.Row="1" x:Name="verse" Margin="20 20 20 20" TextWrapping="Wrap" FontSize="14" />
                        <TextBox x:ConnectionId='45' TextWrapping="Wrap"  AcceptsReturn="True" Grid.Row="2" Name="TextToAdd" FontSize="14">
                        </TextBox>

                    </Grid>
                </Border>
            </Popup>
            <Popup x:ConnectionId='12' x:Name="MenuPopup"                                                         Grid.Row="1"
                   HorizontalOffset="100" VerticalOffset="-40" IsLightDismissEnabled="True">
                <Popup.ChildTransitions>
                    <TransitionCollection>
                        <PopupThemeTransition />
                    </TransitionCollection>
                </Popup.ChildTransitions>
                <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" BorderThickness="2"
                        Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
                    <StackPanel x:ConnectionId='24' Name="SubMenuStackPanel" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ListBox x:ConnectionId='25' FontSize="25" Name="SubMenuMenuPopup"                                                       
                                 SelectedItem="-1">
                            <ListBoxItem x:ConnectionId='26' Name="EnterKey">Enter Key</ListBoxItem>
                            <ListBoxItem x:ConnectionId='27' Name="MoveWindowRight">MoveWindowRight</ListBoxItem>
                            <ListBoxItem x:ConnectionId='28' Name="MoveWindowLeft">MoveWindowLeft</ListBoxItem>
                            <ListBoxItem x:ConnectionId='29' Name="WindowSmaller">WindowSmaller</ListBoxItem>
                            <ListBoxItem x:ConnectionId='30' Name="WindowLarger">WindowLarger</ListBoxItem>
                            <ListBoxItem x:ConnectionId='31' Name="AddANote">AddANote</ListBoxItem>
                            <ListBoxItem x:ConnectionId='32' Name="AddToBookMarks">AddToBookMarks</ListBoxItem>
                            <ListBoxItem x:ConnectionId='33' Name="Hear">Hear</ListBoxItem>
                            <ListBoxItem x:ConnectionId='34' Name="TTS">TTS Text to speech</ListBoxItem>
                            <ListBoxItem x:ConnectionId='35' Name="Translate">Translate</ListBoxItem>
                            <ListBoxItem x:ConnectionId='36' Name="Highlight">Highlight</ListBoxItem>
                            <ListBoxItem x:ConnectionId='37' Name="Copy">Copy</ListBoxItem>
                            <ListBoxItem x:ConnectionId='38' Name="SendMail">SendMail</ListBoxItem>
                            <ListBoxItem x:ConnectionId='39' Name="FontSmaller">FontSmaller</ListBoxItem>
                            <ListBoxItem x:ConnectionId='40' Name="FontLarger">FontLarger</ListBoxItem>
                        </ListBox>
                    </StackPanel>
                </Border>
            </Popup>
            <Popup x:ConnectionId='13' x:Name="StartAudioPopup" IsLightDismissEnabled="True"                                  
                                                    >
                <Popup.ChildTransitions>
                    <TransitionCollection>
                        <PaneThemeTransition />
                    </TransitionCollection>
                </Popup.ChildTransitions>
                <Border x:ConnectionId='16' BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" BorderThickness="2"
                        Background="{StaticResource ApplicationPageBackgroundThemeBrush}" x:Name="audioborder">
                    <ScrollViewer x:ConnectionId='17' Name="scrollViewerStartAudio" Grid.Row="1">
                        <Grid x:ConnectionId='18' Name="MainPaneStartAudioPopup">
                        <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Vertical">
                            <TextBlock x:ConnectionId='22' x:Name="StartMediaTitle" Margin="20 20 20 20" FontSize="18" />
                            <TextBlock x:ConnectionId='23' x:Name="MsgFromServer" TextWrapping="Wrap" Margin="20 20 20 20" FontSize="14" />
                        </StackPanel>
                        <ProgressBar x:ConnectionId='19' Grid.Row="1" Name="WaitingForDownload" Margin="0,30,0,0" IsIndeterminate="True" />
                            <ListBox x:ConnectionId='20'                                                      Grid.Row="2"
                                     x:Name="ListStartAudio" FontSize="14">

                            </ListBox>
                            <Button x:ConnectionId='21' x:Name="ttsHelp"  Grid.Row="3" Content="Help"                       Margin="20 100 20 20" FontSize="14" />
                        </Grid>
                    </ScrollViewer>
                </Border>
            </Popup>
            <Border x:ConnectionId='14' Name="WebBrowserBorder" BorderBrush="Silver" BorderThickness="1" Grid.Row="1">
                <WebView x:ConnectionId='15' Margin="0 0 0 0"                                                                   
                                                                                                                                                     ManipulationMode="All" IsDoubleTapEnabled="True"                                        
                          x:Name="webBrowser1"                                                                                                                                                     />
            </Border> 
        </Grid> 
    </Border>
 
</UserControl>

