<UserControl x:ConnectionId='1'
    x:Class="CrossConnect.MediaPlayerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CrossConnect"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="600"                                              
    d:DesignWidth="600"                                                                                                                        >

    <Border x:ConnectionId='2' BorderBrush="Silver" BorderThickness="3"
            Name="border1">

        <Grid x:ConnectionId='3' Name="grid1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel x:ConnectionId='4' Name="stackPanelButtons" Grid.Column="0" Grid.Row="0" Orientation="Vertical"
                        HorizontalAlignment="Left">
                <Grid x:ConnectionId='25' Name="gridPanelButtons1" HorizontalAlignment="Center" Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button x:ConnectionId='27' x:Name="ButPrevious" Grid.Column="0"                          HorizontalAlignment="Center"
                            Style="{StaticResource PreviousAppBarButtonStyle2}" Tag="Edit" />
                    <Button x:ConnectionId='28' x:Name="ButPause" Grid.Column="1"                          HorizontalAlignment="Center"
                            Style="{StaticResource PauseAppBarButtonStyle2}" Tag="Edit" />
                    <Button x:ConnectionId='29' x:Name="ButPlay" Grid.Column="1"                         HorizontalAlignment="Center"
                            Style="{StaticResource PlayAppBarButtonStyle2}" Tag="Edit" />
                    <Button x:ConnectionId='30' x:Name="ButNext" Grid.Column="2"                      HorizontalAlignment="Center"
                            Style="{StaticResource NextAppBarButtonStyle2}" Tag="Edit" />
                    <Button x:ConnectionId='31' x:Name="ButMenu" Grid.Column="4"                      HorizontalAlignment="Center"
                            Style="{StaticResource ListAppBarButtonStyle2}" Tag="Edit" />
                    <Button x:ConnectionId='32' x:Name="ButClose" Grid.Column="5"                       HorizontalAlignment="Center"
                            Style="{StaticResource DeleteAppBarButtonStyle2}" Tag="Edit" />
                </Grid>
                <TextBlock x:ConnectionId='26' Name="title" Text="" FontSize="18" />
            </StackPanel>
            <Popup x:ConnectionId='5' x:Name="SearchPopup"                                                             Grid.Row="1"
                   HorizontalOffset="150" VerticalOffset="-60" IsLightDismissEnabled="True">
                <Popup.ChildTransitions>
                    <TransitionCollection>
                        <PopupThemeTransition />
                    </TransitionCollection>
                </Popup.ChildTransitions>
                <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" BorderThickness="2"
                        Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ListBox x:ConnectionId='22' Name="SubMenuSearchPopup" SelectedItem="-1"
                                                                                         >
                            <ListBoxItem x:ConnectionId='23' Name="ListBook">Book</ListBoxItem>
                            <ListBoxItem x:ConnectionId='24' Name="ListChapter">Chapter</ListBoxItem>
                        </ListBox>
                    </StackPanel>
                </Border>
            </Popup>
            <Popup x:ConnectionId='6' x:Name="BookPopup"                               HorizontalOffset="-100" VerticalOffset="-100"
                   IsLightDismissEnabled="True">
                <Popup.ChildTransitions>
                    <TransitionCollection>
                        <PopupThemeTransition />
                    </TransitionCollection>
                </Popup.ChildTransitions>
                <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" BorderThickness="2"
                        Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
                        <TextBlock x:ConnectionId='19' Name="ListTitle" Text="Select book" Margin="6 6 6 6" FontSize="18" />
                        <ScrollViewer x:ConnectionId='20' VerticalScrollBarVisibility="Auto" Name="SelectBookScrollViewer">
                            <Grid x:ConnectionId='21' x:Name="ScrollContentGrid" Background="Transparent"></Grid>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Popup>
            <Popup x:ConnectionId='7' x:Name="MenuPopup"                                                         Grid.Row="1"
                   HorizontalOffset="100" VerticalOffset="-40" IsLightDismissEnabled="True">
                <Popup.ChildTransitions>
                    <TransitionCollection>
                        <PopupThemeTransition />
                    </TransitionCollection>
                </Popup.ChildTransitions>
                <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" BorderThickness="2"
                        Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
                    <StackPanel x:ConnectionId='13' Name="SubMenuStackPanel" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ListBox x:ConnectionId='14' Name="SubMenuMenuPopup"                                                       
                                 SelectedItem="-1">
                            <ListBoxItem x:ConnectionId='15' Name="MoveWindowRight">MoveWindowRight</ListBoxItem>
                            <ListBoxItem x:ConnectionId='16' Name="MoveWindowLeft">MoveWindowLeft</ListBoxItem>
                            <ListBoxItem x:ConnectionId='17' Name="WindowSmaller">WindowSmaller</ListBoxItem>
                            <ListBoxItem x:ConnectionId='18' Name="WindowLarger">WindowLarger</ListBoxItem>
                        </ListBox>
                    </StackPanel>
                </Border>
            </Popup>

            <Border x:ConnectionId='8' Name="WebBrowserBorder" BorderBrush="Silver" BorderThickness="1" Grid.Row="1">
                <StackPanel x:ConnectionId='9' Name="AllContent">
                    <ProgressBar x:ConnectionId='10' Name="WaitingForDownload" Margin="0,15,0,0" IsIndeterminate="True" />
                    <StackPanel x:ConnectionId='11' Name="stackContent" Margin="0,15,0,0">
                        <Image x:ConnectionId='12' Width="55" Name="ImageIcon"                             />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Border>

</UserControl>

