                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*" />
                            <ColumnDefinition Width="50*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel x:ConnectionId='20' x:Name="leftpanel22" Orientation="Horizontal" Grid.Column="0"
                                HorizontalAlignment="Left">
                            <Button x:ConnectionId='22' x:Name="PreviousHistory"                                 
                                Style="{StaticResource SkipBackAppBarButtonStyle}" Tag="Next" />
                            <Button x:ConnectionId='23' x:Name="NextHistory"                             
                                Style="{StaticResource SkipAheadAppBarButtonStyle}" Tag="Next" />
