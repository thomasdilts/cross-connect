<common:LayoutAwarePage x:ConnectionId='1'
    x:Name="pageRoot"
    x:Class="CrossConnect.MainPageSplit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CrossConnect"
    xmlns:common="using:CrossConnect.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:callisto="using:Callisto.Controls"
                                                            
    mc:Ignorable="d">

    <Page.TopAppBar>
        <AppBar x:ConnectionId='2' ClosedDisplayMode="Hidden" x:Name="TopAppBar1" Padding="10,0,10,0" AutomationProperties.Name="Top App Bar"                           >
            <Border x:ConnectionId='3' BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" BorderThickness="1"
                    Background="{StaticResource ApplicationPageBackgroundThemeBrush}" x:Name="TopAppBarBorder">
                <ScrollViewer x:ConnectionId='4' VerticalScrollMode="Disabled" Name="scrollViewerTopAppBar1" HorizontalScrollMode="Auto"
                          Style="{StaticResource HorizontalScrollViewerStyle}">
                    <Grid x:ConnectionId='5' Name="GridTopAppBar1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*" />
                            <ColumnDefinition Width="50*" />
                            <ColumnDefinition Width="50*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel x:ConnectionId='6' x:Name="leftpanel" Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Left">
                            <Button x:ConnectionId='12' x:Name="AddNewWindow"                          
                                Style="{StaticResource AddAppBarButtonStyle}" Tag="Edit" />
                            <Button x:ConnectionId='13' x:Name="Settings"                          
                                Style="{StaticResource SettingsAppBarButtonStyle}" Tag="Next" />
                            <Button x:ConnectionId='14' x:Name="DownloadBibles"                               
                                Style="{StaticResource DownloadAppBarButtonStyle}" Tag="Delete" />
                            <Button x:ConnectionId='15' x:Name="Themes"                         Style="{StaticResource FontAppBarButtonStyle}"
                                Tag="Refresh" />
                        </StackPanel>
                        <StackPanel x:ConnectionId='7' x:Name="CenterPanel1" Orientation="Horizontal" Grid.Column="1"
                                HorizontalAlignment="Center">
                            <Button x:ConnectionId='10' x:Name="ColumnsWider"                             
                                Style="{StaticResource ZoomInAppBarButtonStyle}" Tag="Columns Wider" />
                            <Button x:ConnectionId='11' x:Name="ColumnsSmaller"                               
                                Style="{StaticResource ZoomOutAppBarButtonStyle}" Tag="Columns Smaller" />
                        </StackPanel>
                        <StackPanel x:ConnectionId='8' x:Name="RightPanel1" Orientation="Horizontal" Grid.Column="2"
                                HorizontalAlignment="Right">
                            <Button x:ConnectionId='9' x:Name="Help"                      Style="{StaticResource HelpAppBarButtonStyle}"
                                Tag="Help" />
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Border>
        </AppBar>
    </Page.TopAppBar>

    <Page.BottomAppBar>
        <AppBar x:ConnectionId='16' x:Name="BottomAppBar1" Padding="10,0,10,0" AutomationProperties.Name="Bottom App Bar"
                                                                               >
            <Border x:ConnectionId='17' BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" BorderThickness="1"
