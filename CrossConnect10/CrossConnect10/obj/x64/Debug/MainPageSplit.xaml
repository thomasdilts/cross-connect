                        <TextBlock x:ConnectionId='219' x:Name="itemTitle" Margin="0,-10,0,-10" Text="Cross-Connect"
                               Style="{StaticResource SubheaderTextStyle}" />
                    </StackPanel>
                    <Grid x:ConnectionId='218' Margin=" 0,0,0,12" x:Name="WindowGrid" Grid.Row="3" Grid.Column="1"></Grid>
                </Grid>
                <Grid x:ConnectionId='214' Name="RightSpacer" Width="40" Visibility="Collapsed"></Grid>
