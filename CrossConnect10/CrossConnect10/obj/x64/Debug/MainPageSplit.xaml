            x:Name="itemDetail"
            AutomationProperties.AutomationId="ItemDetailScrollViewer"
            Grid.Row="0"
            Style="{StaticResource HorizontalScrollViewerStyle}">
            <StackPanel Orientation="Horizontal">
                <Grid x:ConnectionId='212' Name="LeftSpacer" Width="40" Visibility="Collapsed"></Grid>
                <Grid x:ConnectionId='213' x:Name="itemDetailGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition x:ConnectionId='215' x:Name="LastRow" Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Image x:ConnectionId='216' Name="TopSpacerImage" Visibility="Collapsed" Grid.Row="1" Margin="0,0,20,0" Width="30" Height="22" Source="{Binding Image}"
                       Stretch="UniformToFill" AutomationProperties.Name="{Binding Title}" />
